<p style="color: green"><%= notice %></p>

<div class='container'>

  <%= render @recipe %>

   <div class='row'>
    <div class='d-flex justify-content-center'>
      <span class='mx-2'><%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: 'btn btn-sm btn-outline-secondary' %></span>
      <span class='mx-2'><%= link_to "Back to recipes", session[:search_results], class: 'btn btn-sm btn-outline-secondary' %></span>
    </div>
  </div>

  <div class='row my-2'>
    <div class='d-flex justify-content-center'>
      <%= button_to "Destroy this recipe", @recipe, method: :delete, class: 'btn btn-sm btn-dark' %>
    </div>
  </div>
</div>