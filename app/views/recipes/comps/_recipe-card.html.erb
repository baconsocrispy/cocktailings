
<div class="col">
  <div class="card" style="width: 15rem;">

    <%# favoriting icon %>
    <div class="position-absolute favorite-icon m-2" >
      <i
        role='button'
        value='<%= recipe.id %>'
        <% if current_user.favorites.include?(recipe) %>
          class="fa-solid fa-heart text-danger"
        <% else %>
          class="fa-regular fa-heart text-danger" 
        <% end %>
        data-action='click->recipes#favorite' 
        data-url='<%= favorite_recipe_path(recipe) %>'>
      </i>
    </div>

    <%# if custom image not added, adds default image %>
    <% if recipe.image.present? %>
      <%= image_tag recipe.image, class: ""  %>
    <% else %>
      <img src=<%= asset_path('default.webp') %> class="">
    <% end %>

    <%# displays cocktail name and snippet of description %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to recipe.name, recipe, class: 'text-decoration-none text-dark' %></h5>
      <p class="card-text h-75 text-truncate"><%= recipe.description %></p>
    </div>
    
  </div>
</div>