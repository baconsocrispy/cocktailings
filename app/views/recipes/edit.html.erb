<div class='container'>
  <div class='row text-center'>
    <h1>Editing <%= @recipe.name %></h1>
  </div>
  
  <div class='row'>
    <div class='d-flex justify-content-center'>
      <%= render "components/recipe_form/form", recipe: @recipe %>
    </div>
  </div>

  <div class='row'>
    <div class='w-50 text-center'>
      <span class=''><%= link_to "Show this recipe", @recipe, class: 'btn btn-sm btn-outline-secondary' %></span>
      <span><%= link_to "Back to recipes", recipes_path, class: 'btn btn-sm btn-outline-secondary' %></span>
    <div>
  </div>

   <div class='row my-2'>
      <div class='d-flex justify-content-center'>
        <%= button_to "Destroy this recipe", 
          @recipe, 
          method: :delete, 
          class: 'btn btn-sm btn-dark', 
          data: { turbo: false } %>
      </div>
    </div>
</div>
