<div class="col">
  <div class="card" data-value='<%= recipe.id %>'>

    <%# favoriting widget %>
    <%= render partial: 'favoriting_widget', locals: { recipe: recipe } %>

    <%# if custom image not added, adds default image %>
    <% if recipe.image.present? %>
      <%= image_tag recipe.image, class: ""  %>
    <% else %>
      <img src=<%= asset_path('default.webp') %> class="">
    <% end %>

    <%# displays cocktail name and snippet of description %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to recipe.name, recipe, class: 'text-decoration-none text-dark' %></h5>
      <p class="card-text h-75 text-truncate"><%= recipe.description %></p>
    </div>
  </div>
</div>