  <div class='category-menu-wrapper d-flex flex-row align-items-center' data-controller='recipes'>
    <i class="fa-solid fa-bars category-toggle" 
       aria-expanded='false' 
       aria-label='toggle-menu' 
       aria-controls='category-menu' 
       role='button'
       data-action='click->recipes#toggleCategoryMenu'>
    </i>
    <div class='category-menu'>
      <ul class='d-flex list-group-horizontal category-list'>
        <% Category.all.each do |c| %>
          <li role='button' class='mx-3 mt-1 list-group-item' >
            <div class='category-option' data-value='<%= c.id %>'>
              <%= c.name.pluralize %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  
  </div>