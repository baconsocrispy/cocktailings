<%# category filtering divider %>
<div class="text-light bg-dark category-divider">
  <%= render partial: 'category-widget' %>
</div>


<%# main content %>
<div class='bg-img main-content-wrapper'>

  <%# sorting / new recipe / stats bar %>
  <div class="d-flex flex-row-reverse">
    <div class='me-3 mt-2'>
      <%= select_tag 'Sort', options_for_select(SORT_OPTIONS), 
                            include_blank: 'Sort Options', 
                            class: 'sort-options', 
                            data: { controller: 'recipes', 
                                    action: 'recipes#filter',
                                    url: recipes_path } %>
    </div>
  </div>

  
  <div class='row flex-nowrap'>

    <%# liquor cabinet display widget %>
    <div class='liquor-cabinet-display col-2' data-controller='cabinets'>
      <%= render partial: 'cabinets/liquor_cabinet_display' %>
    </div>

    <%# cocktail card container %>
    <div class='col offset-2 recipe-cards me-3'>
      <%= render partial: 'recipe_cards', locals: { recipes: @recipes } %>
    </div>
  </div>
</div>