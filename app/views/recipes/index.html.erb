<%# page title %>
<div class='row'>
  <h1 class="text-center">What're we having today?</h1>
</div>

<%# category / filtering divider %>
<div class="row text-light bg-dark">
  <div class="d-flex justify-content-center px-3">
    <span class="px-3">Punches</span>
    <span class="px-3">Ancestrals</span>
    <span class="px-3">Juleps</span>
    <span class="px-3">Daiqueries</span>
    <span class="px-3">Bitters</span>
  </div>
</div>

<%# new recipe button %>
<div class="d-flex flex-row-reverse">
  <div class='me-2 mt-2'>
    <a class='text-decoration-none btn btn-sm btn-outline-dark' href='<%= new_recipe_path %>'>New Recipe</a>
  </div>
</div>

<div class='row'>

  <%# liquor cabinet ingredients widget %>
  <%= render partial: 'liquor_cabinet_display' %>

  <%# cocktail card container %>
  <div class='col-10'>
    <div class="container-fluid mt-2 mx-3">
      <div id="recipes" class="row row-cols-1 row-cols-md-4 g-4" data-controller='recipes'>
        <% @recipes.each do |recipe| %>
          <%= render partial: "recipes/comps/recipe-card", locals: {recipe: recipe} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
