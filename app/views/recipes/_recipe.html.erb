<div id="<%= dom_id recipe %>">
  <h2><%= recipe.name %></h2>

  <div class="w-25 position-relative">
    <% if recipe.image.present? %>
      <%= image_tag recipe.image, class: "w-100"  %>
    <% end %>
  </div>
  <h3>Ingredients</h3>
  <ul>
    <% recipe.portions.each do | portion | %>
      <li><%= portion.ingredient.display_name %> | <%= portion.amount %> <%= portion.unit %> </li>
    <% end%>
  </ul>
  <h3>Description</h3>
  <p><%= recipe.description %></p>
  <h3>Steps</h3>
  <ol>
    <% recipe.steps.each do |s| %>
      <li><%= s.name %></li>
      <p><%= s.description %></p>
    <% end %>
  </ol>
</div>
