<%= form_with(model: recipe, local: true) do |f| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="text-danger"><%= flash[:error] %></div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>
    <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= render partial: "portions/comps/portion-select", locals: {recipe: recipe, f: f} %>

  <%= render partial: 'portions/comps/portion-tbl', locals: {recipe: recipe, f: f} %>

  <%= render partial: 'steps/comps/steps-tbl', locals: {recipe: recipe, f: f }, cached: true %>

  <%# image attachment %>
  <%= f.file_field :image %>

  <div>
    <%= f.submit %>
  </div>
  
<% end %>