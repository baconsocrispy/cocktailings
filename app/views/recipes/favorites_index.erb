<%# page title %>
<div class='row'>
  <h1 class="text-center">What're we having today?</h1>
</div>

<%# divider %>
<div class="row text-light bg-dark">
  <div class="d-flex justify-content-center px-3">
    <span class="px-3">Punches</span>
    <span class="px-3">Ancestrals</span>
    <span class="px-3">Juleps</span>
    <span class="px-3">Daiqueries</span>
    <span class="px-3">Bitters</span>
  </div>
</div>

<div class='row'>

  <%# liquor cabinet display widget %>
  <div class='liquor-cabinet-display col-2 border-end' data-controller='cabinets'>
    <%= render partial: 'cabinets/liquor_cabinet_display' %>
  </div>

  <%# cocktail card container %>
  <div class='col-10'>
    <div class="container-fluid mt-2 mx-3">
      <div class="row row-cols-1 row-cols-md-5 g-4" data-controller='recipes'>
        <% current_user.favorites.each do |recipe| %>
          <%= render partial: "recipe_card", locals: { recipe: recipe } %>
        <% end %>
      </div>
    </div>
  </div>
</div>