<div data-controller="ingredients">
  
  <h2>Add Ingredients</h2>

  <%# Selection section %>
  <div class="row w-25">
    
    <div class="col">
      <h6>Spirits</h6>
      <%= f.collection_select :ingredient_id, Spirit.all, :id, :display_name, {:prompt => ""}, { :size => "5", :multiple => true, :class => "spirits-select" } %>
    </div>

    <div class="col">
      <h6>Mixers</h6>
      <%= f.collection_select :ingredient_id, Mixer.all, :id, :display_name, {:prompt => ""}, { :size => "5", :multiple => true, :class => "mixers-select" } %>
    </div>
    <div class="col">
      <h6>Garnishes</h6>
      <%= f.collection_select :ingredient_id, Garnish.all, :id, :display_name, {:prompt => ""}, { :size => "5", :multiple => true, :class => "garnishes-select" } %>
    </div>
    <button data-action="ingredients#addIngredients" id="add-ingredients-btn">Add Ingredients</button>
  </div> 
</div>