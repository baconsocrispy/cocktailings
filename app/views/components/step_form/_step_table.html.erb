<div>
  <table class='table'>
    <thead>
    <tr>
      <th>Step Name</th>
      <th>Description</th>
      <th></th>
    </tr>
    </thead>
    <tbody class='steps'>
      <%= f.simple_fields_for :steps do |step_form| %>
        <%= render 'components/step_form/step_fields', f: step_form %>
      <% end %>
    </tbody>
  </table>

  <%# dynamically adds new step fields via Cocoon gem %>
  <div class='form-actions'>
    <%= link_to_add_association 'Add Step', 
      f, 
      :steps, 
      partial: 'components/step_form/step_fields',
      class: 'btn btn-outline-dark btn-sm', 
      data: {
        association_insertion_node: '.steps', 
        association_insertion_method: :append 
      } 
    %>
  </div>
</div>