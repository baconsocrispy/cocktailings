<tr class='nested-fields' data-controller='ingredients' data-ingredient-type=''>


  <td>
    <%# creates select drop-down for ingredient association objects %>
    <%= f.association :ingredient, 
                      collection: Ingredient.all.order(:display_name), 
                      label: false,
                      label_method: :display_name, 
                      value_method: :id,
                      input_html: {
                        class: 'ingredient-name',
                        data: { 
                          action: 'change->cabinet-form#updateType',
                          url: new_cabinet_path
                        }
                      } %>
  </td>

  <td class='ingredient-amount'>
    <%= f.input :amount, label: false, input_html: { min: '0.1', step: '0.1' } %>
    <%= f.input :unit, label: false, collection: ['', 'Oz.', 'L', 'mL', 'tbsp', 'tsp'], input_html: { class: 'ingredient-unit'} %>
  </td>

  <%# coccoon gem helper to destroy object %>
  <td><%= link_to_remove_association 'x', f, input_html: { class: 'remove-ingredient-btn'} %></td>

  <td class='ingredient-type' data-value=''></td>
</tr>